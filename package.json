    "@emotion/styled": "^11.3.0",
    "@generates/dotter": "^2.0.1",
    "@generates/merger": "^0.1.3",
    "@generates/swag": "^0.0.7",
    "@generates/swag-squad": "^0.0.4",
    "@ianwalter/http": "^6.0.0",
    "@ianwalter/nrg": "^0.23.1",
    "@stitches/react": "^0.2.0-canary.4",
    "clsx": "^1.1.1",
    "common-tags": "^1.8.0",
    "formik": "^2.2.8",
    "mysql": "^2.18.1",
    "nanoid": "^3.1.23",
